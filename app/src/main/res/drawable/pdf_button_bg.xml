<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />
            <solid android:color="#b31217" />
            <stroke android:width="2dp" android:color="#b31217" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />
            <gradient android:angle="90" android:endColor="#e52d27" android:startColor="#b31217" android:type="linear" />
            <stroke android:width="1dp" android:color="#b31217" />
        </shape>
    </item>
</selector>

    <!-- STRINGS USED FOR PAGINATION -->
    <!-- =========================== -->

    <!-- Text shown on the Pagination Number Picker Dialog's Negative Action Button [CHAR LIMIT=8]-->
    <string name="page_number_picker_cancel_button_text">Cancel</string>

    <!-- Text shown on the Pagination Number Picker Dialog's Positive Action Button [CHAR LIMIT=8]-->
    <string name="page_number_picker_set_button_text">Set</string>

    <!-- Title Text shown on the Pagination Number Picker Dialog [CHAR LIMIT=15]-->
    <string name="page_number_picker_title_text">Jump to Page</string>

    <!-- Message displayed when first page is being shown on click of button 'R.id.page_first_button_id' -->
    <string name="navigate_page_first_msg">Loading the First page…</string>

    <!-- Message displayed when last page is being shown on click of button 'R.id.page_last_button_id' -->
    <string name="navigate_page_last_msg">Loading the Last page…</string>

